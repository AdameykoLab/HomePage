
@article{rauschmeier_bhlhe40_2022,
	title = {Bhlhe40 function in activated {B} and {TFH} cells restrains the {GC} reaction and prevents lymphomagenesis},
	volume = {219},
	issn = {0022-1007, 1540-9538},
